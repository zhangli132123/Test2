import java.io.*;

class Run1 implements Runnable {
    @Override
    public void run() {
        String fileName1 = "Z:" + File.separator + "Passage1.txt";
        File f1 = new File(fileName1);
        InputStream in = null;
        try {
            in = new FileInputStream(f1);
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        }


        byte[] b1 = new byte[1024];
        int len = 0;
        try {
            len = in.read(b1, 0, 5);
        } catch (IOException e) {
            e.printStackTrace();
        }


        try {
            in.close();
        } catch (IOException e) {
            e.printStackTrace();
        }

        System.out.println(Thread.currentThread().getName()+":"+new String(b1, 0, len));
        /******************************************************************************/

        String fileName = "Z:"+File.separator+"Passage2.txt";
        File f2 = new File(fileName);
        OutputStream out = null;
        try {
            out = new FileOutputStream(f2);
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        }
        String str1 = new String(b1, 0, len);
        byte[] c = str1.getBytes();
        try {
            out.write(c);
        } catch (IOException e) {
            e.printStackTrace();
        }
        try {
            out.close();
        } catch (IOException e) {
            e.printStackTrace();
        }

    }
}





class Run2 implements  Runnable {
    @Override
    public void run() {
        String fileName1 = "Z:" + File.separator + "Passage1.txt";
        File f1 = new File(fileName1);
        InputStream in = null;
        try {
            in = new FileInputStream(f1);
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        }


        byte[] b1 = new byte[1024];
        int len = 0;
        try {
            len = in.read(b1, 5, 10);
        } catch (IOException e) {
            e.printStackTrace();
        }


        try {
            in.close();
        } catch (IOException e) {
            e.printStackTrace();
        }

        System.out.println(Thread.currentThread().getName()+":"+new String(b1, 5, 10));
        /******************************************************************************/

        String fileName = "Z:"+File.separator+"Passage2.txt";
        File f2 = new File(fileName);
        OutputStream out = null;
        try {
            out = new FileOutputStream(f2);
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        }
        String str1 = new String(b1, 5, len);
        byte[] c = str1.getBytes();
        try {
            out.write(c);
        } catch (IOException e) {
            e.printStackTrace();
        }
        try {
            out.close();
        } catch (IOException e) {
            e.printStackTrace();
        }


    }
}


public class NewThread {
    public static void main(String[] args) throws IOException {
        Run1 Run1 = new Run1();
        Run2 Run2 = new Run2();
        Thread Thread1 = new Thread(Run1,"线程一");
        Thread Thread2 = new Thread(Run2,"线程二");
        Thread1.start();
        Thread2.start();
    }
}
